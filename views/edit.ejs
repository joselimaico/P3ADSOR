<ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/articles/list">Estudiantes</a></li>
        <li class="breadcrumb-item active">Editar</li>
    </ol>
    
    <h1 class="display-4">Editar Estudiante</h1>
    <form method="post" action="/articles/update/<%= article.id %>">
            <div class="form-group col-md-6">
              <label for="nombre">Nombre</label>
              <input type="text" name="nombre" class="form-control" value="<%= article.nombre %>"  placeholder="Ingrese el Nombre">
              
            </div>
            <div class="form-group col-md-6">
              <label for="apellido">Apellido</label>
              <input type="text" name="apellido" class="form-control" value="<%= article.apellido %>" placeholder="Ingrese el Apellido">
            </div>
            
    
            <div class="form-group col-md-2">
                    <label for="edad">Edad</label>
                    <input type="text" name="edad" value="<%= article.edad %>" class="form-control">
            </div>
           
            <div class="form-group col-md-6">
                    <label for="direccion">Dirección</label>
                    <input type="text" name="direccion" class="form-control" value="<%= article.direccion %>" placeholder="Ingrese la dirección">
            </div>
            
            <input type="submit" value="Submit" class="btn btn-primary">
    
            
    </form>